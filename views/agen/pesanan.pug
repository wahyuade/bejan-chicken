								form.form-vertical
									div.form-group
										label.control-label Nama
										input(
						          type= 'text'
						          v-model= 'nama'
						          placeholder= 'tes'
						          class= 'form-control'
						        )
									div.form-group
										label.control-label Jenis
										input(
						          type= 'text'
						          v-model= 'jenis'
						          placeholder= 'nama toko'
						          class= 'form-control'
						        )
									div.form-group
										label.control-label Jumlah
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'jenis pakan'
