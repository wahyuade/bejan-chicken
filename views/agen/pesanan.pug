template#pesanan-template
	div.container
		div#page-container-wrapper
			div.container-fluid
				h1 Data Transaksi
				button(class='btn btn-primary btn-lg' type='button' data-toggle='modal' data-target='#myModal') Tambah transaski
				hr
				div(class='modal fade' id='myModal' role='dialog')
					div(class='modal-dialog')
						div(class='modal-content')
							div(class='modal-header')
								h4.modal-title Tambah Pesanan
							div.modal-body
								form.form-vertical
									div.form-group
										label.control-label Nama
										input(
						          type= 'text'
						          v-model= 'nama'
						          placeholder= 'nama pembeli'
						          class= 'form-control'
						        )
									div.form-group
										label.control-label Jenis
										input(
						          type= 'text'
						          v-model= 'jenis'
						          placeholder= 'nama toko'
						          class= 'form-control'
						        )
									div.form-group
										label.control-label Jumlah
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'jenis pakan'
						          class= 'form-control'
						        )  
									div.form-group
										label.control-label Jumlah
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'jumlah'
						          class= 'form-control'
						        )
									div.form-group
										label.control-label Tanggal
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'harga/kg'
						          class= 'form-control form_datetime'
						        )
									div.form-group
										label.control-label Tanggal
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'harga total'
						          class= 'form-control form_datetime'
						        )
									div.form-group
										label.control-label Tanggal
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'tanggal pesan'
						          class= 'form-control form_datetime'
						        )
									div.form-group
										label.control-label Tanggal
										input(
						          type= 'text'
						          v-model= 'jumlah'
						          placeholder= 'tanggal kirim'
						          class= 'form-control form_datetime'
						        )

							div.modal-footer
								button(class='btn btn-success' type='button' data-dismiss='modal') Submit
								button(class='btn btn-default' type='button' data-dismiss='modal') Close
				div(class='modal fade' id='myModal1' role='dialog')
