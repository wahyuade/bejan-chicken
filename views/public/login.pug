template#login-template
  div.container 
    div(class='card card-container')
      p(style=text align = 'center') Bejan's Chicken Farm Login
      form.form-signin(v-on:submit.prevent= 'doLogin()')
        input(
          type= 'text'
          v-model= 'no_telp'
          placeholder= 'email'
          class= 'form-control'
        )
        input(
          type= 'password'
          v-model= 'password'
          placeholder= 'password'
          class= 'form-control'
        )
        input(
          type= 'submit'
          value= 'Login'
          class= 'btn btn-lg btn-block btn-signin'
        )
      button(class='btn btn-lg btn-block btn-signin')
        router-link(to='/register') Register